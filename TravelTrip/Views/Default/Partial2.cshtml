@model List<TravelTrip.Models.Classes.Blog>


@foreach (var x in Model)
{
    <div class="right">
    <div class="bot-left">
        <img src="@x.ImageUrl" alt="" />
    </div>
    <div class="left-text">
        <h4>@x.Title</h4>
        <span class="doller">@x.Date.ToString("dd.MM.yyyy")</span>
        <p>@x.Description.Substring(0,90)</p>
        <p><a href="/Blog/BlogDetail/@x.ID"><span class="read">Devamını Oku</span></a></p>
    </div>
    </div>
}